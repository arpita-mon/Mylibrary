<h2><%= author.name %></h2>
<a href="/authors/<%= author._id %>/edit">Edit</a>
<%- include('../partials/deleteForm', { url:`/authors/${author._id}` }) %>
<% if (booksByAuthor.length > 0) { %>
  <h2>Books by <%= author.name %></h2>
    <% booksByAuthor.forEach(book => { %>
      <img src="<%= book.coverImagePath %>" height="150" width="auto">
    <% }) %>
<% } %>